extends layout

block content
  div.w3-card-4
    header.w3-container.w3-blue
      h1
        i.fa.fa-home.clickable(onclick="window.location='/'" style="cursor:pointer;") 
        | Lista de Pessoas
    div.w3-container
      table.w3-table-all.w3-hoverable
        thead
          tr
            th ID
            th Nome
            th Idade
            th Sexo
            th Cidade
        
        each l in lista
          tr.clickable(onclick="window.location='/pessoas/" + l.id + "'" style="cursor:pointer;")
            td #{l.id}
            td #{l.nome}
            td #{l.idade}
            td #{l.sexo}
            td #{l.morada.cidade}
    
    footer.w3-container.w3-blue.w3-center
      h5 Generated in RPCW2023 in #{d}